#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🧪 Running tests before commit..."
npm test -- --watchAll=false --passWithNoTests

if [ $? -ne 0 ]; then
    echo "❌ Tests failed! Please fix the failing tests before committing."
    exit 1
fi

echo "✅ All tests passed! Proceeding with commit..."
